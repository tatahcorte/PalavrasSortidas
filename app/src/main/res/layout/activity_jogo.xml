<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ActivityJogo"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/nivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelNivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivel"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/textViewNivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelPontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pontos"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/textViewPontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lifes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/coracao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_32dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/coracao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_32dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/coracao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_32dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/coracao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_32dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/coracao5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_32dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/nivel"
        app:layout_constraintBottom_toBottomOf="@id/editTextResposta">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textViewDicas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Dica1, Dica2, Dica3"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorForeground"
        android:fontFamily="serif-monospace"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/textViewPalavraOculta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="___________"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:fontFamily="serif-monospace"
        android:textSize="30sp"
        android:textColor="@color/colorForeground"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editTextResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        android:hint="@string/digite_a_palavra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnResposta" />

    <Button
        android:id="@+id/btnResposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/responder"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>